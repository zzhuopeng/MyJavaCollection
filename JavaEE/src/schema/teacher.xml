<?xml_phase version="1.0" encoding="UTF-8"?>

<!-- 在根节点的属性位置对Schema引用 -->
<!-- xmlns：xsi：这里必须是这样的写法，值已经固定了的
     xmlns：这里是名称空间，值也是固定的，写的是Schema里面顶部目标名称空间
     xsi:schemaLocation：有两段：前半段是名称空间的值，后面是约束文档的路径

 -->
<teachers xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xmlns="http://www.example.org/teacher"
          xsi:schemaLocation="http://www.example.org/teacher teacher.xsd">
    <teacher>
        <name>张三</name>
        <age>28</age>
    </teacher>
    <teacher>
        <name>张三</name>
        <age>28</age>
    </teacher>
</teachers>